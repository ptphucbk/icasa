package org.tp.fmm.impl;

import org.tp.fmm.FollowMeAdministration;
import org.tp.fmm.IlluminanceGoal;
import org.tp.bfm.config.FollowMeConfig;
import java.util.Map;

public class FollowMeManagerImpl implements FollowMeAdministration {

	/** Field for configService dependency */
	private FollowMeConfig[] configService;

	@Override
	public void setIlluminancePreference(IlluminanceGoal illuminanceGoal) {
		// TODO Auto-generated method stub
		System.out.println("setIlluminancePreference");
	}

	@Override
	public IlluminanceGoal getIlluminancePreference() {
		// TODO Auto-generated method stub
		// TODO Auto-generated method stub
				IlluminanceGoal illuminanceGoal;
				if (configService[0].getMaximumNumberOfLightsToTurnOn() == 1){
					illuminanceGoal = IlluminanceGoal.SOFT;
				} else if (configService[0].getMaximumNumberOfLightsToTurnOn() == 2){
					illuminanceGoal = IlluminanceGoal.MEDIUM;
				} else if (configService[0].getMaximumNumberOfLightsToTurnOn() == 3){
					illuminanceGoal = IlluminanceGoal.FULL;
				} else {
					illuminanceGoal = null;
				}
		System.out.println("getIlluminancePreference");
		return illuminanceGoal;
	}

	/** Bind Method for configService dependency */
	public void bindConfig(FollowMeConfig followMeConfig, Map properties) {
		// TODO: Add your implementation code here
		System.out.println("bind config");
	}

	/** Unbind Method for configService dependency */
	public void unbindConfig(FollowMeConfig followMeConfig, Map properties) {
		// TODO: Add your implementation code here
		System.out.println("unbind config");
	}

	/** Component Lifecycle Method */
	public void stop() {
		// TODO: Add your implementation code here
		System.out.println("FollowMeManagementImpl stop");
	}

	/** Component Lifecycle Method */
	public void start() {
		// TODO: Add your implementation code here
		System.out.println("FollowMeManagementImpl start");
	}

}
